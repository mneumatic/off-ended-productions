<!DOCTYPE html>
<html lang="en" class="no-js">
<%- include('partials/head.ejs') %>
<body>
  <%- include('partials/header.ejs') %>
  <main id="lp">
      <section class="hero">
          <h1>OFF ENDED Productions</h1>
          <img class="oep-logo" src="/img/oep-logo.webp" alt="Off Ended Productions"/>
          <span class="lp-mottos">
            <% for (let mot of motto.motto ) { %>
                <span><%= mot %></span>
            <% } %>
          </span>
          <div class="content-wrapper">
              <% for (let category of categories) { %>
                  <div class="content-category">
                      <a href="<%- category.url %>" title="<%= category.title %> â†’" aria-label="<%= category.title %>">
                          <img src="/img/<%- category.image %>" alt="<%= category.title %>">
                      </a>
                      <label><%= category.title %></label>
                  </div>
              <% } %>
          </div>
          <div class="hero-ripple"></div>
      </section>
  </main>
  <%- include('partials/footer.ejs') %>
  <script src="/js/pages/lp.js" type="module"></script>
</body>
</html>
