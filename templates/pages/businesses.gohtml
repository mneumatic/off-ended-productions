{{template "base" .}}
{{define "content"}}
  <main id="community">
    <section class="bg-black">
      <div class="container flex flex-col-reverse xl:grid grid-cols-2 gap-7 items-center justify-center text-white">
        <div>
          <div class="text-center md:text-start">
            <span>Local</span>
            <h2>Business</h2>
            <p class="text-4xl permanent-marker-regular">Radical Local Businesses!</p>
          </div>
          <br>
          <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusamus, accusantium adipisci animi deleniti dolore ex incidunt inventore ipsum molestiae necessitatibus nobis non numquam omnis perspiciatis rem reprehenderit saepe vero voluptas.</p>
        </div>
        <div class="img-container__animated">
          <img class="img-fluid rounded x-translate" src="/public/img/running-springs-ca.webp" alt="Running Springs CA" style="filter: drop-shadow(5px 5px 3px rgba(0, 0, 0, 0.5));"/>
        </div>
      </div>
    </section>
    <section>
      <div class="container flex flex-row flex-wrap justify-center lg:justify-evenly">
        {{range .Businesses}}
          <div class="bg-gray-100 p-5 my-5 mx-5 lg:me-10 lg:ms-0 rounded w-[320px]">
            <img class="img-fluid rounded" src="{{.Img}}" alt="{{.Title}}">
            <div>
              <h3 class="py-5">{{.Title}}</h3>
              <p>{{.Description}}</p>
              <div class="flex flex-col text-end py-3">
                <span>Open: {{.Hours}}</span>
                <address>{{.Location}}</address>
              </div>
              <a class="btn mt-3" href="tel:{{.Phone}}">Call Now!</a>
            </div>
          </div>
        {{end}}
      </div>
      <div class="container flex flex-row items-center justify-between mt-10">
        <a class="btn w-[175px] lg:w-[200px]" href="/community">← Community</a>
        <a class="btn w-[175px] lg:w-[200px]" href="/community/events">Events →</a>
      </div>
    </section>
  </main>
{{end}}
{{define "js"}}
  <script src="/public/js/images.js"></script>
  <script>
    const communityImages = document.querySelector(".img-container__animated")
    const observer = new IntersectionObserver(handleIntersection, options)
    observer.observe(communityImages)
  </script>
{{end}}
